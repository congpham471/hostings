@model Web.UI.Models.CreatePasswordModel

@{
    ViewBag.Title = "";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script>
    $(function () {
        if ($('#IsAuthTokenValid').val() == 'invalid')
        {
            $('#myModal').modal();
        }
    });
</script>

@using (Html.BeginForm("CreatePassword","Account", FormMethod.Post)) 
{
    
    <div class="form-horizontal">
        <h4>Create your password</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.NewPassword, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.NewPassword)
                @Html.ValidationMessageFor(model => model.NewPassword)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>

        @Html.HiddenFor(model=>model.TokenGuid)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (!Model.IsAuthTokenValid)
{

    <input type="hidden" id="IsAuthTokenValid" value="invalid" />
}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create password" class="btn btn-default" />
            </div>
        </div>

        <div class="container">
            <h2></h2>

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title"></h4>
                        </div>
                        <div class="modal-body text-center">
                            <p>token is invalid</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}